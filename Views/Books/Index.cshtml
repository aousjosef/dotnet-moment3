@model IEnumerable<Moment_3.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container">

    <div class="row">

        <div class="col">

            <p>
                <a asp-action="Create">Create New</a>
            </p>
        </div>

        <div class="col">

            <p>
                <form class="d-flex" asp-action="Index" asp-controller="Books">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="searchString">
                    <button class="btn btn-outline-primary" type="submit">Search</button>
                </form>
            </p>
        </div>


    </div>

</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PubDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvaliable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PubDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvaliable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
